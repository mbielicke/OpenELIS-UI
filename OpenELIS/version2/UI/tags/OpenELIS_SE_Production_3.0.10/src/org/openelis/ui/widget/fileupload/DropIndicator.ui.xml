<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
       xmlns:g='urn:import:com.google.gwt.user.client.ui'
       xmlns:w="urn:import:org.openelis.ui.widget">
  
  <ui:with type="org.openelis.ui.messages.UIMessages" field="msg" />
  <ui:with type="org.openelis.ui.resources.UIResources" field="res" />
  
  <g:LayoutPanel  styleName="{res.general.WhiteContentPanel}">
    <g:layer left = "30%" right = "25%" top="20%" bottom ="10%">
      <g:HTMLPanel ui:field = "screenPanel" width="100%" height="100%" styleName = "{res.general.DropIndicator}">
        <w:Label text = "{msg.drop_dropFilesToUpload}"/>
      </g:HTMLPanel>
    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>