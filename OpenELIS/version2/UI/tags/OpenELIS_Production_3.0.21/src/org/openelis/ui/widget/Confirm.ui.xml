<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:org.openelis.ui.widget">

  <ui:with type="org.openelis.ui.resources.UIResources" field="res" />

  <g:LayoutPanel ui:field="outer" styleName="{res.confirm.WindowPanel}">
    <g:layer top="0px" height="25px">
      <g:LayoutPanel ui:field="top" styleName="{res.confirm.top}">
        <g:layer top="0px" bottom="0px" left="0px" right="16px">
          <w:Window.Caption ui:field="cap" width="100%" styleName="{res.window.Caption}"/>
        </g:layer>
        <g:layer right="0px" width="16px" top="0px" bottom="0px">
          <g:FocusPanel ui:field="close" width="16px" styleName="{res.window.CloseButton}" />
        </g:layer>
      </g:LayoutPanel>
    </g:layer>
    <g:layer top="25px" bottom="0px">
      <g:LayoutPanel ui:field="body" styleName="{res.confirm.WindowBody}">
        <g:layer top="0px" bottom="40px">
          <g:VerticalPanel verticalAlignment="MIDDLE" height="100%" width="100%">
          <g:HorizontalPanel width="100%" horizontalAlignment="LEFT">
              <g:AbsolutePanel ui:field="icon" width="32px"/>
              <g:HTML ui:field="text" width="100%" height="100%"/>
          </g:HorizontalPanel>
          </g:VerticalPanel>
        </g:layer>
        <g:layer bottom="0px" height="40px">
          <g:HorizontalPanel width="100%" horizontalAlignment="CENTER">
            <g:HorizontalPanel ui:field="buttonPanel" spacing="3"/>
          </g:HorizontalPanel>
        </g:layer>
      </g:LayoutPanel>
    </g:layer>
  </g:LayoutPanel>

</ui:UiBinder>
